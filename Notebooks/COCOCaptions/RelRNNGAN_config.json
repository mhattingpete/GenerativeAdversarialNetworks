{
	"CUDA_VISIBLE_DEVICES":"5",
	"train_config":{
		"num_epochs":200,
		"epochs_pretrain":100,
		"max_temperature":100,
		"pretrain_temperature":1,
		"gen_steps":1,
		"gen_train_freq":5,
		"loss_fun":"RaSGAN"
	},
	"model_config":{
		"save_name":"RelGAN",
		"use_glove":"false",
		"batch_size":32,
		"noise_size":128,
		"generator":{
			"name":"GumbelRelRNNGenerator",
			"mem_slots":8,
			"head_size":32,
			"num_heads":4,
			"beam_width":5,
			"optimizer":"Adam",
			"pre_lr":1e-2,
			"lr":1e-4,
			"pre_lr_scheduler":{
				"name":"ReduceLROnPlateau",
				"mode":"min",
				"factor":0.5,
				"patience":2
			},
			"lr_scheduler":{
				"factor":0.8
			}
		},
		"discriminator": {
			"name":"GumbelRelRNNDiscriminator",
			"hidden_size":32,
			"rnn_size":64,
			"optimizer":"Adam",
			"lr":1e-4,
			"num_embeddings":32,
			"lr_scheduler":{
				"factor":0.8
			}
		}
	},
	"dataset_config":{
		"path":"../../../Datasets/COCO2015Captions",
		"min_vocab_freq":100
	}
}
