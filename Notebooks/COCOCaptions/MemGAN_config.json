{
	"CUDA_VISIBLE_DEVICES":"1",
	"train_config":{
		"num_epochs":200,
		"epochs_pretrain":100,
		"max_temperature":10,
		"pretrain_temperature":1,
		"gen_steps":1,
		"gen_train_freq":3
	},
	"model_config":{
		"save_name":"MEM-GAN",
		"batch_size":128,
		"noise_size":128,
		"generator":{
			"name":"MemoryGenerator",
			"hidden_size":256,
			"sim_size":4,
			"similarity":"CosineSimilarity",
			"optimizer":"Adam",
			"pre_lr":1e-4,
			"lr":1e-5,
			"lr_scheduler":{
				"name":"ReduceLROnPlateau",
				"mode":"min",
				"factor":0.5,
				"patience":2
			}
		},
		"discriminator": {
			"name":"MemoryDiscriminator",
			"hidden_size":256,
			"sim_size":4,
			"similarity":"CosineSimilarity",
			"optimizer":"Adam",
			"lr":1e-5
		}
	},
	"dataset_config":{
		"path":"../../../Datasets/COCO2015Captions",
		"min_vocab_freq":100
	}
